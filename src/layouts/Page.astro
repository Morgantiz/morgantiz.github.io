---
import Layout from "../layouts/Layout.astro";

const { title } = Astro.props;
---

<Layout>
  <main class="page-content">
    <div class="title">
      <h1>{title}</h1>
      <hr />
    </div>
    <body><slot /> </body>
  </main>
</Layout>

<style>
  .page-content {
    max-width: 1200px;
    padding: 0 1em;
  }
</style>
