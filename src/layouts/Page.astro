---
import Layout from "../layouts/Layout.astro";

const { title } = Astro.props;
---

<Layout>
  <main class="page">
    <div class="title">
      <h1>{title}</h1>
      <hr />
    </div>
    <body><slot /> </body>
  </main>
</Layout>

<style>
  .page {
    max-width: 50vw;
    margin: auto;
    padding: 3em 1em;
  }
</style>
